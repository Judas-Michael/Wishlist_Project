<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/wishlist_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="46dp"
        android:ems="10"
        android:fontFamily="casual"
        android:hint="Enter Item Here"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/email_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/wishlist_et"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:fontFamily="casual"
        android:hint="Enter Email Here"
        android:inputType="textEmailAddress" />

    <RadioButton
        android:id="@+id/purchased_rb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/email_et"
        android:layout_alignRight="@+id/email_et"
        android:layout_below="@+id/email_et"
        android:layout_marginTop="30dp"
        android:fontFamily="casual"
        android:text="Purchased"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />

    <RadioButton
        android:id="@+id/notpurchased_rb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/purchased_rb"
        android:layout_alignStart="@+id/purchased_rb"
        android:layout_centerVertical="true"
        android:fontFamily="casual"
        android:text="Has not been purchased"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />

    <Button
        android:id="@+id/add_item_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notpurchased_rb"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:fontFamily="casual"
        android:text="Add Item To List" />

    <Button
        android:id="@+id/back_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_item_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Back" />
</RelativeLayout>